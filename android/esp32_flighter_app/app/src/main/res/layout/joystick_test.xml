<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLinerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/channel3TextView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/channel_3" />

        <TextView
            android:id="@+id/channel3Textvalue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1500" />

        <TextView
            android:id="@+id/channel4TextView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="@string/channel_4" />

        <TextView
            android:id="@+id/channel4Textvalue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1500" />

        <TextView
            android:id="@+id/channel2TextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/channel_2" />

        <TextView
            android:id="@+id/channel2Textvalue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1500" />

        <TextView
            android:id="@+id/channel1TextView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="@string/channel_1" />

        <TextView
            android:id="@+id/channel1Textvalue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1500" />

        <Button
            android:id="@+id/op_cam"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="打开摄像头" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/logo"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="43dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.zerokol.views.joystickView.JoystickView
                android:id="@+id/joystickView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>

            <com.zerokol.views.joystickView.JoystickView
                android:id="@+id/joystickView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/textView"
                android:text="NMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <SeekBar
                android:id="@+id/nms_seek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="70"
                android:layout_below="@id/textView"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txtThresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threshold"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/nms_seek"/>

            <SeekBar
                android:id="@+id/threshold_seek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtThresh"/>

            <TextView
                android:id="@+id/valTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/threshold_seek"/>
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>
